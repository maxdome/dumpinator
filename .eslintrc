{
  "extends": "airbnb-base",
  "rules": {
    "no-restricted-syntax": 0,
    "no-prototype-builtins": 0,
    "consistent-return": 0,
    "array-callback-return": 0,
    "quote-props": 0,
    "no-underscore-dangle": 0,
    "prefer-arrow-callback": 0,
    "arrow-body-style": 0,
    "max-len": [2, 500, 2, { "ignoreUrls": true, "ignoreComments": false }],
    "no-param-reassign": 0,
    "space-before-function-paren": 0,
    "prefer-template": 0,
    "global-require": 0,
    "comma-dangle": [2, "never"], // http://eslint.org/docs/rules/comma-dangle.html
    "guard-for-in": 0,            // http://eslint.org/docs/rules/guard-for-in.html
    "func-names": 0,              // http://eslint.org/docs/rules/func-names.html
    "strict": 0,
    "generator-star-spacing": 0,
    "no-unused-vars": [2, { "args": "none" }],
    "import/no-extraneous-dependencies": ["error", {"devDependencies": ["**/*.spec.js"]}]
  },
  "ecmaFeatures": {
    "generators": true
  },
  "env": {
    "node": true,
    "mocha": true
  }
}
